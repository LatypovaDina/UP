<Window x:Class="UP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FFA6BAF9">
    <Grid>
        <Label Content="Добро пожаловать в систему учета:)" HorizontalAlignment="Center" Margin="20" VerticalAlignment="Top" FontFamily="Bahnschrift Condensed" FontSize="24" FontWeight="Bold"/>
        <Label Content="Введите данные учетной записи:" HorizontalAlignment="Center" Margin="100" VerticalAlignment="Top"/>
        <TextBox x:Name="Login" HorizontalAlignment="Center" Margin="0,148,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Password" HorizontalAlignment="Center" Margin="0,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Войти" HorizontalAlignment="Center" Margin="356,208,355,0" VerticalAlignment="Top" Click="Button_Click" Width="81"/>

    </Grid>
</Window>
